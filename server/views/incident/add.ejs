<%- include ../partials/header.ejs %>

<%- include ../partials/user_nav.ejs %>

<!-- Content for the Add page -->
<div class="cotainer">
    <div class="row">
        <div class="offset-md-2 col-md-8">
        <h1><%= title %></h1>
        <br><br>

        <form class="form" method="POST">


            <div class="form-group">
                <label for="customerTextField">Customer Name</label>
                <input type="text"
                 class="form-control"
                id='customerTextField', placeholder="Enter Name of Customer", name="customer_name" required>
                
            </div>

            <div class="form-group">
                <label for="descriptionTextField">Incident Description</label>
                <textarea type="text"
                 class="form-control"
                id='descriptionTextField', placeholder="Enter the Incident Description", name="description" required>
                </textarea>
            </div>

            
            <div class="form-group">
                <label for="narrativeTextField">Incident Narrative</label>
                <input type="text"
                 class="form-control"
                id='narrativeTextField', placeholder="Enter the Incident Narrative", name="narrative" value="Not Responded" required>
            </div>

            <div class="form-group">
                <label for="priorityTextField">Priority</label>
                <select class="form-control"
                id='priorityTextField', placeholder="Enter the priority of Incident", name="priority" required>>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </div>

            <div class="form-group">
                <label for="statusTextField">Incident Status</label>
                <input type="text"
                 class="form-control"
                id='statusTextField' name="status" value="New" required>
            </div>
               
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/incident" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

