<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include ../partials/header.ejs %>
		
	</head>
<body>
	
<!-- Content of Add Page-->
	<div class="cotainer">
		<div class="row">
			<div class="offset-md-2 col-md-8">
			<h1><%= title %></h1>
			<br><br>

			<form class="form" method="POST">
				<div class="form-group">
					<label for="numberField">Incident Number</label>
					<input type="number" 
					class="form-control"
					id='numberField' placeholder="Enter the Incident Number" name="number" value ="<%= incident.number %>" required>
				</div>

				<div class="form-group">
					<label for="customerTextField">Customer Name</label>
					<input type="text"
					 class="form-control"
					id='customerTextField' placeholder="Enter Name of Customer" name="customer_name" value ="<%= incident.customer_name %>" required>
					
				</div>

				<div class="form-group">
					<label for="descriptionTextField">Incident Description</label>
					<textarea type="text"
					 class="form-control"
					id="descriptionTextField" placeholder="Enter the Incident Description" name="description" value ="<%= incident.description %>" required>
					</textarea>
				</div>

				
				<div class="form-group">
					<label for="narrativeTextField">Incident Narrative</label>
					<input type="text"
					 class="form-control"
					id='narrativeTextField' placeholder="Enter the Incident Narrative" name="narrative"  value ="<%= incident.narrative %>" required>
				</div>

				<div class="form-group">
					<label for="priorityTextField">Priority</label>
					<select class="form-control"
					id='priorityTextField' placeholder="Enter the priority of Incident" name="priority" value ="<%= incident.priority %>" required>
						<option value="low">Low</option>
						<option value="medium">Medium</option>
						<option value="high">High</option>
					</select>
				</div>

				<div class="form-group">
					<label for="statusTextField">Incident Status</label>
					<input type="text"
					 class="form-control"
					id='statusTextField' placeholder="Enter the Incident Narrative" name="status" value ="<%= incident.status %>" required>
				</div>

				<button class="btn btn-primary">
					Update
				</button>
				<a href="/" class="btn btn-warning">
					Cancel
				</a>
			</form>
		</div>
		</div>
	</div>
</body>
<%- include ../partials/footer.ejs %>
</html>